/* pages/search/search.wxss */

page{
    background-color: #ffffff;
}
.container{
    padding-top:70rpx; 
}

.input{
    border-radius:0 !important;
}

.header{
    background-color: #ffffff;
    border-bottom: 1px solid #f3f3f3;
    padding-bottom: 14rpx;
    position: fixed;
    z-index: 77;
    width: 750rpx;
    top:0;
}

.history-container{
    /*margin-top:60rpx;*/
    display:flex;
    flex-direction:column;
}

.slide{
    width:8rpx;
    height: 46rpx;
    background-color: #157658;
    margin-right: 22rpx;
}

.history-title{
    display:flex;
    flex-direction:row;
    align-items: center;
    margin-top:38rpx;
}

.icon{
    margin-right: 30rpx;
}

.history-title > text{
    font-size:28rpx;
    color: #333333;
}

.history-tags{
    width: 100%;
    box-sizing: border-box;
    display:flex;
    flex-direction:row;
    justify-content: flex-start;
    margin-top:20rpx;
    padding-left: 30rpx;
    flex-wrap: wrap;
}

.tag{
    background-color: #f3f3f3 !important;
    /*border: 1px solid #f3f3f3 !important; */
    color: #666666 !important;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}

.tag-selected{
    background-color: #DCEBE6 !important;
    /*border: 1px solid #DCEBE6 !important;*/
    color: #157658 !important;
    margin-right:20rpx;
    margin-bottom: 20rpx; 
}

.spu-bottom{
    /*margin-top: 20rpx;*/
    box-sizing: border-box;
    width: 100%;
    padding-top: 18rpx;
    padding-left:18rpx;
    padding-right:18rpx;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
    flex-wrap: wrap;
    /*background-color:#F5F5F5;*/
    /*background-color: #f3f4f6;*/
}

.loading{
    position: fixed;
    top:calc((100% - 60rpx - 70rpx)/2);
    right:calc((100% - 60rpx)/2);
}

.empty{
    position: fixed;
    top:calc((100% - 340rpx - 70rpx)/2);
    /*top:0;*/
    right:calc((100% - 600rpx)/2);
}

