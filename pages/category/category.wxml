<view class="container">
    <view class="search-container">
        <l-button shape="square"
                  width="710"
                  height="60"
                  icon="research"
                  icon-size="24"
                  icon-color="#C4C9D2"
                  bind:lintap="onGotoSearch"
                  l-class="search-btn">

            搜索商品
        </l-button>
    </view>
    <view class="main">
        <l-segment
                active-key="{{defaultRootId}}"
                height="{{segHeight}}"
                width="160"
                item-height="90"
                even="{{false}}"
                l-class="l-left"
                l-line-class="l-seg-line"
                l-active-class="segment-item-active"
                l-inactive-class="segment-item"
                bind:linchange="onSegChange"
                placement="left">

            <block wx:for="{{roots}}">
                <l-segment-item tab="{{item.name}}" key="{{item.id}}"></l-segment-item>
            </block>
        </l-segment>
        <view class="right">
            <!--            <view class="banner"></view>-->
            <!--            <text class="title">- 全部分类 -</text>-->
            <s-sub-category bind:itemtap="onJumpToSpuList"
                            categories="{{currentSubs}}"
                            bannerImg = "{{currentBannerImg}}">
            </s-sub-category>
        </view>
    </view>
</view>
