<view class="container">
    <image wx:if="{{bannerImg}}" class="banner" src="{{bannerImg}}"></image>
    <text class="title">- 全部分类 -</text>
    <l-grid l-class="inner-container">
        <block wx:for="{{categories}}">
            <l-grid-item bind:linitemtap="onTapGridItem" data-cid="{{item.id}}" key="{{index}}" slot="{{index}}">
                <view class="grid-item" >
                    <image mode="aspectFit" class="img" src="{{item.img}}"></image>
                    <text>{{item.name}}</text>
                </view>
            </l-grid-item>
        </block>
    </l-grid>
</view>