<wxs module="s" src="../../wxs/status.wxs" xmlns:wx=""></wxs>

<view class="container bg-{{status}}">
    <view class="inner-container {{userCollected?'touch-disable':''}}">
        <view class="top">
            <view style="color:{{s.couponColorStatus(status)}}" class="price-container">
                <view wx:if="{{_coupon.type === 2}}">
                    <text class="rate">{{_coupon.rate * 10}}</text>
                    <text style="font-size:26rpx;">æŠ˜</text>
                </view>
                <l-price wx:else size="60"
                         value="{{coupon.minus}}"
                         color="{{s.couponColorStatus(status)}}">
                </l-price>
                <text style="margin-left:10rpx">{{_coupon.title}}</text>
            </view>
        </view>
        <view class="bottom">
            <text>{{_coupon.remark}}
            </text>
        </view>
    </view>
    <view class="right-bottom">
        <view>
            <text>{{_coupon.startTime}}-</text>
            <text>{{_coupon.endTime}}</text>
        </view>
    </view>
    <view data-id="{{coupon.id}}" bind:tap="onGetCoupon" class="touch-region ">

    </view>
</view>