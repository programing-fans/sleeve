/* components/spu-preview/index.wxss */
@import "../wxss/sleeve.wxss";

.container {
    width: 340rpx; 
    display: flex;
    flex-direction: column;
    /*background-color: #ffffff;*/
    /*box-shadow: 0px 0px 6px 0px rgba(221, 221, 221, 0.5);*/
    box-shadow:0px 0px 8px 0px rgba(119,163,149,0.2);
    margin-bottom:20rpx;
    background-color: #ffffff;
}

.content-container {
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    padding: 16rpx 16rpx 22rpx 16rpx;
    background-color: #ffffff;
}

.discount-tag {
    width: 40rpx;
    height: 100rpx;
    position: absolute;
    /*z-index: 10;*/
}

.title {
    font-size: 28rpx;
    color: #333333;
    /*margin-bottom: 6rpx;*/
}

.subtitle {
    font-size: 24rpx;
    font-weight: 300;
    margin-top: 6rpx;
    color: #888;
}

.price-row {
    display: flex;
    flex-direction: row;
}

.discount-price {
    margin-left: 20rpx;
}

.tags {
    /*width: 100%;*/
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-bottom: 8rpx;
    margin-top: 6rpx;
    /*justify-content: space-between;*/
}

.l-tag-class {
    background-color: #DCEBE6 !important;
    border-color: #DCEBE6 !important;
    margin-right: 5rpx !important;
    color: #157658 !important;
    padding-left: 6rpx !important;
    padding-right: 6rpx !important;

    /*height:28rpx !important;*/
    /*line-height: 30rpx !important;*/
